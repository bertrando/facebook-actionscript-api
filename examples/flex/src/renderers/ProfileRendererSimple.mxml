<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="200" height="60">
	
	<mx:Object id="data" />
	
	<mx:HBox width="100%" height="100%"
		verticalAlign="middle"
		horizontalAlign="left"
		paddingLeft="5"
		paddingTop="5"
		paddingRight="5"
		paddingBottom="5">
		
		<mx:Image width="50" height="50" source="{data.pic_square}"/>
		
		<mx:VBox verticalGap="0" width="100%" height="100%">
			<mx:Label width="100%" fontSize="9"
				text="{data.name}" />
		</mx:VBox>
		
	</mx:HBox>
	
</mx:Canvas>
