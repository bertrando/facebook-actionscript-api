package demo.controls {	import flash.display.Loader;	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.ProgressEvent;	import flash.errors.IOError;	import flash.events.IOErrorEvent;	import flash.net.URLRequest;		import demo.events.FacebookDemoEvent;	public class Image extends MovieClip {		public var img:Loader;		public function Image() {			img = new Loader();			img.name = 'img';		}		public function load(url:String):void {						img.contentLoaderInfo.addEventListener(Event.COMPLETE, onImageComplete, false, 0, true);			img.contentLoaderInfo.addEventListener(IOErrorEvent.IO_ERROR, onImageError, false, 0, true);			img.contentLoaderInfo.addEventListener(ProgressEvent.PROGRESS, onProgress, false, 0, true);			img.load(new URLRequest(url));						addChild(img);						this.setChildIndex(img, this.numChildren-1);		}				protected function onProgress(event:ProgressEvent):void {			//trace('Loading: ', (event.bytesLoaded/event.bytesTotal)*100);		}				public function onImageComplete(event:Event):void {			dispatchEvent(new FacebookDemoEvent(FacebookDemoEvent.IMAGE_COMPLETE, null));		}				protected function onImageError(event:IOErrorEvent):void {			//trace('Error' , event)		}	}}